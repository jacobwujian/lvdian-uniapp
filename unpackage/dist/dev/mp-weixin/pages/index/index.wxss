page {
  margin-top: 0;
}
.backGround {
  position: fixed;
  background-color: #5b6abd;
  z-index: -1;
  width: 750rpx;
  height: 1332.5rpx;
}
.page {
  margin-top: 0;
  background-color: rgba(0, 0, 0, 0);
}
.top {
  background-color: rgba(0, 0, 0, 0);
  z-index: -1;
}
.box {
  z-index: 99;
  box-shadow: 0px 1px 1px #b0b0b0;
  margin-top: 30rpx;
  background-color: #ffffff;
  border-radius: 10px;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 20rpx;
  padding-top: 1rpx;
}
.box .text {
  font-family: PingFangSC;
  font-weight: 400;
  font-size: 24rpx;
  color: #101010;
  font-style: normal;
  letter-spacing: 0px;
  line-height: 34rpx;
  text-decoration: none;
}
.box .title-text {
  text-shadow: 0px 1px 1px #b0b0b0;
}
.box .nav {
  display: flex;
  margin-top: 10rpx;
}
.box .nav .nav-item {
  text-align: center;
  width: 25%;
  margin: 15rpx auto;
}
.box .nav .nav-item image {
  background-color: #ffffff;
  box-shadow: 0px 1px 1px #b0b0b0;
  border-radius: 50%;
  padding: 10rpx;
  width: 60rpx;
  height: 62rpx;
}
.box .onliyTop {
  position: relative;
  top: -70rpx;
  margin-bottom: 0;
}
.text {
  font-size: 20rpx;
}
.more {
  font-size: 24rpx;
  margin-left: 450rpx;
  font-weight: 100;
  color: #b5b5b5;
}
.foot {
  display: flex;
  width: 750rpx;
  height: 114rpx;
  position: fixed;
  bottom: 0px;
  left: 0px;
  background-color: rgba(104, 102, 102, 0.5);
  z-index: 5;
}
.foot text {
  opacity: 1;
  z-index: 6;
  margin: auto;
  text-align: center;
  color: white;
  font-size: 40rpx;
}
.foot button {
  opacity: 1;
  width: 94px;
  height: 34px;
  z-index: 6;
  margin: 20rpx auto;
  border-radius: 10px;
  border-color: #bbbbbb;
  border-width: 1px;
  border-style: solid;
  text-align: center;
  font-size: 14px;
  color: #ffffff;
  background-color: #14d233;
  text-align: center;
  font-weight: normal;
  font-style: normal;
}

