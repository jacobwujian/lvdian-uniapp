page {
  background-color: #F9F9F9;
}
.img {
  width: 100%;
  height: 100%;
}
.showBox-publish:nth-child(n+2) {
  margin-top: 20rpx;
}
.showBox-publish {
  background-color: #FFFFFF;
  border-radius: 25rpx;
  overflow: hidden;
  padding: 15rpx;
  display: flex;
}
.showBox-publish-img {
  width: 290rpx;
  height: 240rpx;
  border-radius: 25rpx;
  overflow: hidden;
}
.showBox-publish-info {
  margin-left: 10rpx;
  width: 340rpx;
  height: 240rpx;
  padding-left: 15rpx;
}
.showBox-publish-info view {
  overflow: hidden;
  text-overflow: ellipsis;
}
.showBox-publish-info view:first-child {
  line-height: 60rpx;
  font-size: 35rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.showBox-publish-info view:nth-child(n + 2) {
  color: #a5a5a5;
  font-size: 25rpx;
  line-height: 43rpx;
}
.bottomBar {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}

