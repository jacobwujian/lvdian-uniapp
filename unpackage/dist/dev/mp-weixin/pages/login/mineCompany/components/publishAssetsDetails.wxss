page {
  background-color: #F9F9F9;
  padding-bottom: 10rpx;
}
.img {
  width: 100%;
  height: 100%;
}
.product {
  background-color: #fff;
  border-radius: 10px;
}
.product-box {
  padding: 10rpx;
  display: flex;
  justify-content: space-between;
}
.product-box-img {
  width: 240rpx;
  height: 200rpx;
  border-radius: 25rpx;
  overflow: hidden;
  margin-left: 5rpx;
}
.product-box-des {
  height: 200rpx;
  width: 425rpx;
}
.product-box-des-title {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 37rpx;
}
.product-box-des-score {
  display: flex;
}
.product-box-des view {
  line-height: 67rpx;
}
.product-box-des view:nth-child(n+2) {
  font-size: 28rpx;
}
.product-info {
  font-size: 28rpx;
  padding: 20rpx;
}
.product-info-box {
  line-height: 50rpx;
  display: flex;
  justify-content: space-between;
}
.product-info-box-pCode {
  word-wrap: break-word;
  width: 380rpx;
}
.product-info-box:nth-child(n+2) {
  margin-top: 10rpx;
}
.greenCard {
  background-color: #fff;
  border-radius: 10rpx;
  margin-top: 20rpx;
  padding: 20rpx;
}
.greenCard-title {
  font-size: 40rpx;
}
.greenCard-info {
  font-size: 28rpx;
  padding: 0 10rpx 0 10rpx;
}
.greenCard-info-box {
  display: flex;
  justify-content: space-between;
  line-height: 55rpx;
}
.greenCard-info-box-btn {
  display: flex;
  justify-content: space-between;
}
.greenCard-info-box-btn button:nth-child(n+2) {
  margin-left: 20rpx;
}

